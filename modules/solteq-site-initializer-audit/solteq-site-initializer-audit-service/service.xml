<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.4.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_4_0.dtd">

<service-builder dependency-injector="ds" package-path="com.solteq.liferay.site.initializer.audit">
	<author>Solteq</author>
    <namespace>sq</namespace>

    <entity name="SIAuditEntry" local-service="true" remote-service="false">

		<!-- PK fields -->
		<column name="siAuditEntryId" primary="true" type="long" />

		<!-- GroupID / CompanyID  -->
		<column name="groupId" type="long" />
		<column name="companyId" type="long" />

        <!-- Audit Fields -->
        <column name="userId" type="long" />
		<column name="createDate" type="Date" />

		<!-- Other fields -->
		<column name="siKey" type="String" />
		<column name="processingTime" type="long" />
		<column name="status" type="int" />
		<column name="message" type="String" />

		<!-- Order -->
		<order by="desc">
			<order-column name="createDate" />
		</order>

		<!-- Finder methods -->
		<finder name="GroupId" return-type="Collection">
			<finder-column name="groupId" />
		</finder>

	</entity>
</service-builder>